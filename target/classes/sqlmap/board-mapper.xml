<!-- for board one page -->
<select id='list_ten' resultType='board.BoardVO'>
select row_number() over(order by b.id) no, b.*
from board b
order by no desc
</select>

<insert id='insertPost'>
insert into board (title, content, writer)
values (#{title, jdbcType=VARCHAR}, #{content, jdbcType=VARCHAR}, #{writer, jdbcType=VARCHAR})
</insert>

</mapper>